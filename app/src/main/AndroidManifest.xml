<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tawan.java">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.tawan.java.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app_book_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/app_book_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidTheme.NoActionBar">

        <activity
            android:name="com.tawan.java.ui.lang.ChangeLanguageActivity"
            android:exported="false" />
        <activity
            android:name="com.tawan.java.ui.edittask.EditTaskActivity"
            android:exported="false" />
        <activity
            android:name="com.tawan.java.ui.new_task.NewTaskActivity"
            android:exported="false" />
        <activity
            android:name="com.tawan.java.ui.checkout.CheckoutActivity"
            android:exported="false" />
        <activity
            android:name="com.tawan.java.ui.hometawan.HomeTawanActivity"
            android:exported="false" />
        <activity
            android:name="com.tawan.java.ui.home.HomeActivity"
            android:exported="true" />
        <activity
            android:name="com.tawan.java.ui.NavdrawContainerActivity"
            android:exported="true"
            android:label="@string/title_activity_navdraw_container"
            android:theme="@style/Theme.AndroidTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tawan.java.ui.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.AndroidTheme.NoActionBar" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.tawan.java.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>